#! /bin/bash

. .env

case "$1" in

	build)
		go build -o elwinar ./app
	;;

	build-assets)
		gulp
	;;

	start)
		./elwinar --port=$PORT --database=$DATABASE --secret=$SECRET --password=$PASSWORD --public=$PUBLIC --views=$VIEWS --base=$BASE --google-analytics-id=$GOOGLE_ANALYTICS_ID > elwinar.log 2>&1 &
	;;

	stop)
		kill -SIGINT `pidof elwinar`
	;;

esac
exit 0
